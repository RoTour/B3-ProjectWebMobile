generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  password         String
  email            String    @unique
  username         String    @unique
  messages         Message[]
  banned           Boolean   @default(false)
  sentMessages     Message[] @relation("from")
  recievedMessages Message[] @relation("to")
}

model Message {
  id      Int    @id @default(autoincrement())
  content String
  from    User   @relation(fields: id, references: [id], name: "from")
  to      User   @relation(fields: id, references: [id], name: "to")
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int?
}

model Chatroom {
  id   Int    @id @default(autoincrement())
  name String
}
